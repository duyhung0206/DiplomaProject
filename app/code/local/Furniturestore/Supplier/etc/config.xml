<?xml version="1.0"?>

<config>
    <modules>
        <Furniturestore_Supplier>
            <version>0.1.3</version>
        </Furniturestore_Supplier>
    </modules>
    <frontend>
        <routers>
            <supplier>
                <use>standard</use>
                <args>
                    <module>Furniturestore_Supplier</module>
                    <frontName>supplier</frontName>
                </args>
            </supplier>
        </routers>
        <layout>
            <updates>
                <supplier>
                    <file>supplier.xml</file>
                </supplier>
            </updates>
        </layout>
        <translate>
            <modules>
                <Furniturestore_Supplier>
                    <files>
                        <default>Furniturestore_Supplier.csv</default>
                    </files>
                </Furniturestore_Supplier>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <furniturestore_supplier before="Mage_Adminhtml">Furniturestore_Supplier_Adminhtml</furniturestore_supplier>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
         <layout>
             <updates>
                 <supplier>
                    <file>supplier.xml</file>
                 </supplier>
             </updates>
        </layout>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <supplier>
                                            <title>Supplier - All</title>
                                        </supplier>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
     </adminhtml>
    <global>
        <models>
            <supplier>
                <class>Furniturestore_Supplier_Model</class>
                <resourceModel>supplier_mysql4</resourceModel>
            </supplier>
            <supplier_mysql4>
                <class>Furniturestore_Supplier_Model_Mysql4</class>
                <entities>
                    <supplier>
                        <table>furniturestore_supplier</table>
                    </supplier>
                    <product>
                        <table>furniturestore_supplier_product</table>
                    </product>
                    <purchaseorder>
                        <table>furniturestore_purchase_order</table>
                    </purchaseorder>
                    <purchaseorder_product>
                        <table>furniturestore_purchase_order_product</table>
                    </purchaseorder_product>
                    <delivery>
                        <table>furniturestore_delivery</table>
                    </delivery>
                </entities>
            </supplier_mysql4>
        </models>
        <resources>
            <supplier_setup>
                <setup>
                    <module>Furniturestore_Supplier</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </supplier_setup>
            <supplier_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </supplier_write>
            <supplier_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </supplier_read>
        </resources>
        <blocks>
            <supplier>
                <class>Furniturestore_Supplier_Block</class>
            </supplier>
        </blocks>
        <helpers>
            <supplier>
                <class>Furniturestore_Supplier_Helper</class>
            </supplier>
        </helpers>
    </global>
</config>